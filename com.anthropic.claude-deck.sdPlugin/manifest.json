{
  "$schema": "https://schemas.elgato.com/streamdeck/plugins/manifest.json",
  "UUID": "com.anthropic.claude-deck",
  "Name": "Claude Deck",
  "Author": "Anthropic Community",
  "Description": "Control Claude Code CLI from your Stream Deck - approve actions, switch modes, trigger commands",
  "Version": "0.1.0.0",
  "SDKVersion": 3,
  "Software": {
    "MinimumVersion": "6.6"
  },
  "OS": [
    {
      "Platform": "mac",
      "MinimumVersion": "13"
    }
  ],
  "Nodejs": {
    "Version": "20",
    "Debug": "enabled"
  },
  "CodePath": "bin/plugin.js",
  "Icon": "imgs/plugin-icon",
  "Category": "Claude Code",
  "CategoryIcon": "imgs/category-icon",
  "Profiles": [
    {
      "Name": "Claude Control",
      "DeviceType": 0,
      "DontAutoSwitchWhenInstalled": true
    },
    {
      "Name": "Claude Control (Mini)",
      "DeviceType": 1,
      "DontAutoSwitchWhenInstalled": true
    },
    {
      "Name": "Claude Control (XL)",
      "DeviceType": 2,
      "DontAutoSwitchWhenInstalled": true
    },
    {
      "Name": "Claude Control (Pedal)",
      "DeviceType": 5,
      "DontAutoSwitchWhenInstalled": true
    },
    {
      "Name": "Claude Control (Plus)",
      "DeviceType": 7,
      "DontAutoSwitchWhenInstalled": true
    },
    {
      "Name": "Claude Control (Neo)",
      "DeviceType": 8,
      "DontAutoSwitchWhenInstalled": true
    }
  ],
  "Actions": [
    {
      "UUID": "com.anthropic.claude-deck.approve",
      "Name": "Approve",
      "Icon": "imgs/actions/approve",
      "Tooltip": "Approve the pending Claude Code action",
      "Controllers": ["Keypad"],
      "States": [
        {
          "Image": "imgs/actions/approve",
          "Title": "Approve",
          "TitleColor": "#FFFFFF",
          "FontSize": "12"
        }
      ]
    },
    {
      "UUID": "com.anthropic.claude-deck.reject",
      "Name": "Reject",
      "Icon": "imgs/actions/reject",
      "Tooltip": "Reject the pending Claude Code action",
      "Controllers": ["Keypad"],
      "States": [
        {
          "Image": "imgs/actions/reject",
          "Title": "Reject",
          "TitleColor": "#FFFFFF",
          "FontSize": "12"
        }
      ]
    },
    {
      "UUID": "com.anthropic.claude-deck.interrupt",
      "Name": "Interrupt",
